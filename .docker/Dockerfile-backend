FROM node:alpine

RUN apk add --no-cache \
    openssh

RUN mkdir -p /app && chown node:node /app

WORKDIR /app

USER node

RUN ssh-keygen

COPY --chown=node:node ./backend/package.json ./package.json

RUN npm install

COPY --chown=node:node ./backend .

RUN npx prisma generate

EXPOSE ${BACKEND_PORT}

CMD ["npm", "run", "dev"]